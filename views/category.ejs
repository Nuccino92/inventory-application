
<!DOCTYPE html>

<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %>
    <h1><%= title  %> </h1>
  
    <% if (result.length > 0) { %> 
        <% result.forEach(res => { %> 
          <div class="query-container">
          <a class="product-query" href='<%= single %>/<%= res._id %>  '>
            <h3>Name: <%= res.name %> </h3>
            <img class="image" src="<% res.image %> "/>
            <p>Gender: <%= res.gender %> </p>
            <p>Size: <%= res.size %> </p>
            <% if (res.type != undefined) { %> 
                <p>Type: <%= res.type %> </p>
            <% } %> 
          </a>
        </div>
    
    <% }) %> 
    <% } else { %>  
        <p>there are no items for display</p>
        <% } %> 
        <a class="create-btn" href='<%= path %>' >Create</a>
       <a class="homepage-btn" href="/">Homepage</a>
  <%- include('./partials/footer.ejs') %>
</html>
